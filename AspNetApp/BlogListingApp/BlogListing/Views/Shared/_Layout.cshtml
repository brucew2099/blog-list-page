<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogListing</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div style="background-color:darkgray;">
        <div class="container" style="background-color:#bb0000;">
            <header class="blog-header py-3">
                <div class="row flex-nowrap justify-content-between align-items-center">
                    <div class="col-4 pt-1">
                        <a class="link-secondary" href="#" style="color:#ffffff;">Subscribe</a>
                    </div>
                    <div class="col-4 text-center">
                        <a class="blog-header-logo text-dark" href="#"><img src="https://wexnermedical.osu.edu/-/media/images/wexnermedical/logos/osuwmclogolargertext2x.png?mw=230&la=en&hash=9D13BB1A65EAABCCA6ED9B17F6E8C263CC2857AF" /></a>
                    </div>
                    <div class="col-4 d-flex justify-content-end align-items-center">
                        <a class="link-secondary" href="#" aria-label="Search" style="color:#ffffff;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5" /><path d="M21 21l-5.2-5.2" /></svg>
                        </a>
                        <a class="btn btn-sm btn-outline-secondary" href="#" style="color:#ffffff;">Sign up</a>
                    </div>
                </div>
            </header>

            <div class="nav-scroller py-1 mb-2" style="background-color: #ffffff;">
                <nav class="nav d-flex justify-content-between">
                    <a class="p-2 link-secondary" href="/Home/Index">Topics</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 2</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 3</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 4</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 5</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 6</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 7</a>
                    <a class="p-2 link-secondary" href="/Home/Index">Link 8</a>
                </nav>
            </div>
            @RenderBody()
            <div class="border-top text-muted">
                <div class="container" style="background-color:#bb0000;height:50px;">
                    &copy; 2022 - Blog Listing
                </div>
            </div>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
